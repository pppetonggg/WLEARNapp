<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".OptionActivity">

    <TextView
        android:id="@+id/topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:gravity="top"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/topic_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TCP/IP" />

    <TextView
        android:id="@+id/topic_description"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="Internet Protocol(IP)
Transport Control Protocol/User Datagram Protocol(UDP)
Internet Control Message Protoccol"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/topic_name" />

    <Button
    android:id="@+id/btn_lesson"
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="250dp"
    android:background="@drawable/button_style"
    android:text="Learning"
    android:ems="20" />

    <Button
        android:id="@+id/btn_exercise"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_lesson"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_style"
        android:text="Exercise"
        app:layout_constraintTop_toBottomOf="@+id/btn_lesson" />


    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_exercise"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_style"
        android:text="Quiz"
        app:layout_constraintTop_toBottomOf="@+id/btn_exercise" />
</RelativeLayout>
</layout>